# ============================================================================
# Academic Note-Taking GraphRAG System - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# ============================================================================

# ============================================================================
# NEO4J CONFIGURATION
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=graphrag_secure_password_2025
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30.0
NEO4J_MAX_TRANSACTION_RETRY_TIME=30.0
NEO4J_ENCRYPTED=false
NEO4J_TRUST=TRUST_ALL_CERTIFICATES

# ============================================================================
# EMBEDDING MODEL CONFIGURATION
# ============================================================================
# Model: Qwen/Qwen3-Embedding-0.6B (1024 dimensions configured)
EMBEDDING_MODEL_NAME=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_DIMENSIONS=1024
EMBEDDING_DEVICE=cpu
# Use 'cuda' for NVIDIA GPUs, 'mps' for Apple Silicon (M1/M2/M3)
# EMBEDDING_DEVICE=cuda
# EMBEDDING_DEVICE=mps

EMBEDDING_BATCH_SIZE=32
EMBEDDING_NORMALIZE_EMBEDDINGS=true
EMBEDDING_CACHE_FOLDER=./models/cache

# ============================================================================
# LLM CONFIGURATION (Google Gemini)
# ============================================================================
LLM_PROVIDER=google
LLM_MODEL_NAME=gemini-2.5-flash
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

LLM_TEMPERATURE=0.0
# Temperature 0 for deterministic query generation
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=30.0

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_ENVIRONMENT=development
# Options: development, staging, production
APP_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_ENABLE_METRICS=false
APP_MAX_WORKERS=4

# ============================================================================
# VECTOR INDEX SETTINGS
# ============================================================================
VECTOR_SIMILARITY_FUNCTION=cosine
# Options: cosine, euclidean
DEFAULT_VECTOR_SEARCH_K=10
CHALLENGE_DETECTION_THRESHOLD=0.70

# ============================================================================
# OPTIONAL: API SETTINGS (if building REST API)
# ============================================================================
# API_HOST=0.0.0.0
# API_PORT=8000
# API_WORKERS=4
# API_RELOAD=true
# API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

